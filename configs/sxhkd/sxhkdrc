### Movement

# Focus/swap windows by direction
super + {_,shift + }{a,s,w,d}
	bspc node --{focus,swap} {west,south,north,east}

super + {_,shift + }{h,j,k,l}
        bspc node --{focus,swap} {west,south,north,east}


# Switch to desktop
#super + {1-9,0}
#        bspc desktop --focus ^{1-3,5-8,10,11,12}

super + {1-9,0}
  bspc desktop --focus ^{1-9,10}

#super + alt + {1-4}
#        bspc desktop --focus ^{5-8}

#super + ctrl + {1-3}
#        bspc desktop --focus ^{10-12}

# Move window to selected desktop
#super + shift + {1-9,0}
#        bspc node --to-desktop ^{1-3,5-8,10,11,12} --focus

super + shift + {1-9,0}
  bspc node --to-desktop ^{1-9,10} --focus

#super + shift + alt + {1-4}
#        bspc node --to-desktop ^{5-8} --focus

#super + shift + ctrl + {1-3}
#        bspc node --to-desktop ^{10-12} --focus

# expand a window by moving one of its side outward
super + alt + {h,j,k,l}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

super + alt + {Left, Down, Up, Right}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

super + alt + {a,s,w,d}
        bspc node -z {left -20 0,bottom 0 20,top 0 -20, right 20 0}

# contract a window by moving one of its side inward
super + ctrl + {h,j,k,l}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

super + ctrl + {Left, Down, Up, Right}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}
	
super + ctrl + {a,s,w,d}
        bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# swap current and largest node
super + v
 	bspc node -s biggest

# Set window state
super + {z,x,c,f}
 	bspc node -t '~{tiled,pseudo_tiled,floating,fullscreen}'

# send the newest marked node to the newest preselected node
super + e
 	bspc node newest.marked.local -n newest.!automatic.local

# focus the next/previous desktop in the current monitor
super + bracket{left,right}
	bspc desktop -f {prev,next}.local

# send node to prev/next desktop
super + shift + bracket{left,right}
   bspc node -d {prev,next} -f

# preselect the direction
super + alt + shift + {Left,Down,Up,Right}
	bspc node -p {west,south,north,east}

super + alt + shift + {h,j,k,l}
	bspc node -p {west,south,north,east}

super + alt + shift + {a,s,w,d}
        bspc node -p {west,south,north,east}

# cancel the preselection for the focused node
super + shift + b
	bspc node -p cancel

# cancel the preselection for the focused desktop
super + alt + b
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

# move a floating window
super + shift + ctrl + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}

super + shift + ctrl + {h,j,k,l}
	bspc node -v {-20 0,0 20,0 -20,20 0}

super + shift + ctrl + {a,s,w,d}
        bspc node -v {-20 0,0 20,0 -20,20 0}

# set the node flags
super + ctrl + {z,x,c,v}
	bspc node -g {marked,sticky,private,locked}

# move focused to preselected
super + t
	bspc node -n newest.!automatic.local

### Applications

# Terminal
super + Return
  env LIBGL_ALWAYS_SOFTWARE=1 kitty

super + Tab
  env LIBGL_ALWAYS_SOFTWARE=1 kitty

# Floating Terminal
super + shift + Return
	/home/sylkos/dotfiles/configs/sxhkd/scripts/floating_terminal.sh

super + shift + Tab
	/home/sylkos/dotfiles/configs/sxhkd/scripts/floating_terminal.sh

# Firefox
super + shift + f
	firefox

# Discord
super + shift + z
  env LIBGL_ALWAYS_SOFTWARE=1 discord

# Spotify
super + shift + x
  env LIBGL_ALWAYS_SOFTWARE=1 spotify

# multimc
super + shift + c
  prime-run polymc

# steam
super + shift + e
  prime-run steam

# thunar
super + shift + v
	thunar

super + shift + alt + e
	/home/sylkos/dotfiles/configs/sxhkd/scripts/floating_thunar.sh

# ranger
super + shift + r
  env LIBGL_ALWAYS_SOFTWARE=1 kitty -e ranger

# btop
super + shift + g
  env LIBGL_ALWAYS_SOFTWARE=1 kitty -e btop

### Rofi

# Launch apps
super + shift + q
	rofi -show drun

### System stuff

# Reload, Exit -> mess with this
super + {Escape,r}
	bspc {quit,wm -r}

# Volume Control
XF86Audio{Raise,Lower}Volume
	pactl set-sink-volume @DEFAULT_SINK@ {+,-}10%

# make sxhkd reload its configuration files:
super + p
        pkill -USR1 -x sxhkd

# get window's class name
super + alt + c
    notify-send "$(xprop | grep 'CLASS')"

### BSPWM things

# Close window, included because of the meme
alt + F4
	bspc node --close

# Close window
super + q
	bspc node --close

### Screenshots

# Region
super + alt + e
	maim -s | xclip -selection clipboard -t image/png

# Window
super + shift + Print
	maim -i $(xdotool getactivewindow) ~/Pictures/Screenshots/$(date +%s).jpg

# All
super + Print
	maim ~/Pictures/Screenshots/$(date +%s).jpg

### Other

# Hack fix for MC 1.12
super + o
	xrandr --output DVI-D-0 --mode 1920x1200

# Reload Polybar
super + i
	/home/sylkos/dotfiles/configs/polybar/sylkbar/preview.sh

super + alt + x
  /home/sylkos/dotfiles/configs/sxhkd/scripts/blank.sh

super + alt + z
  /home/sylkos/dotfiles/configs/sxhkd/scripts/restore.sh

