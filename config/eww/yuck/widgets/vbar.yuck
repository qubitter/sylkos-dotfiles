(defwidget vbar []
	(centerbox
		:orientation "v"
		:class "vbar"

		(box
			:class "leftbar"
			:space-evenly false
			:valign "start"
			:orientation "v"
			(bar_launcher)
			(bar_workspaces :orientation "v"))

		(box
			:class "middlebar"
			:space-evenly false
			:orientation "v"
			)

		(box
			:class "rightbar"
			:space-evenly false
			:valign "end"
			:orientation "v"
			(bar_clock :orientation "v")
			(bar_powermenu))
))
